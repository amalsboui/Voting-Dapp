name: üîç Debug Azure OIDC Login

on:
  workflow_dispatch:

jobs:
  debug-azure-login:
    runs-on: ubuntu-latest

    permissions:
      id-token: write
      contents: read

    steps:
      - name: Print GitHub Context
        run: echo '${{ toJson(github) }}'

      - name: Print Environment Branch
        run: echo "Branch ref is ${{ github.ref }}"

      - name: Print Secrets Presence
        run: |
          if [ -z "${{ secrets.AZURE_CLIENT_ID }}" ]; then echo "Missing AZURE_CLIENT_ID"; else echo "AZURE_CLIENT_ID is set"; fi
          if [ -z "${{ secrets.AZURE_TENANT_ID }}" ]; then echo "Missing AZURE_TENANT_ID"; else echo "AZURE_TENANT_ID is set"; fi
          if [ -z "${{ secrets.AZURE_SUBSCRIPTION_ID }}" ]; then echo "Missing AZURE_SUBSCRIPTION_ID"; else echo "AZURE_SUBSCRIPTION_ID is set"; fi

      - name: Azure Login (OIDC)
        uses: azure/login@v1
        with:
          client-id: ${{ secrets.AZURE_CLIENT_ID }}
          tenant-id: ${{ secrets.AZURE_TENANT_ID }}
          subscription-id: ${{ secrets.AZURE_SUBSCRIPTION_ID }}
